<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox fx:id="rootPane" xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" prefWidth="600" prefHeight="300" spacing="5" fx:controller="controller.AddCategoryController">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <children>
        <Label id="h2" text="Add a new category" />      
        <TextField fx:id="name"/>
        <Label fx:id="error" visible="false" text="Incorrect name (empty or already used)"/>
        <Button fx:id="submit" text="Submit" onAction="#submit"/>
    </children>
</VBox>

