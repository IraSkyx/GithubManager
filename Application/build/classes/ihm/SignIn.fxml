<BorderPane id="BorderPane" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SignInController">
    <top>
        <HeaderController/>     
    </top>
    <center>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Label id="h2" text="Email" />
            <TextField fx:id="email" maxWidth="200" />
            <Label id="h2" text="Password" />
            <PasswordField fx:id="password" maxWidth="200" />
            <Label fx:id="error" visible="false" text="Email or password incorrect">
                <padding>
                    <Insets top="50" right="50" bottom="50" left="50"/>
                </padding>
            </Label>
         </children>
      </VBox>
   </center>
   <bottom>
        <FlowPane alignment="CENTER" columnHalignment="CENTER" BorderPane.alignment="CENTER">
            <children>
                <Button id="signIn" focusTraversable="false" text="Log in" onAction="#SignIn"/>
                <Button id="home" focusTraversable="false" onAction="#GoToHome" text="Go back" />               
            </children>
        </FlowPane>
   </bottom>
</BorderPane>
